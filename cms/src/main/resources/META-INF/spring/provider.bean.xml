<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans classpath:org/springframework/beans/factory/xml/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!--change to your endpoint package-->
  <context:component-scan base-package="com.picc.cms"/>

  <bean id="dataSource"
    class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="com.huawei.gauss.jdbc.ZenithDriver"/>
    <property name="url" value="jdbc:zenith:@10.133.247.29:9079"/>
    <property name="username" value="piccdba"/>
    <property name="password" value="gaussdb_123"/>
  </bean>

  <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
    <property name="dataSource" ref="dataSource"/>
    <property name="configLocation" value="classpath:/config/mybatis-config.xml"/>
  </bean>

  <bean id="userMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
    <property name="mapperInterface" value="com.picc.cms.dao.AccountMapper"/>
    <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
  </bean>

</beans>